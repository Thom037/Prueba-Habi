CREATE TABLE GUSTA (
    Cedula_BEBEDOR_G INTEGER,
  	Codigo_bebida_BEBIDA_G INTEGER,
    FOREIGN KEY (Cedula_BEBEDOR_G) REFERENCES BEBEDOR(Cedula)
  	FOREIGN KEY (Codigo_bebida_BEBIDA_G) REFERENCES BEBIDA(Codigo_BEBIDA)
);
