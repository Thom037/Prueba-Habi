CREATE TABLE VENDE (
    Codigo_tienda_TIENDA_V INTEGER,
  	Codigo_bebida_BEBIDA_V INTEGER,
  	Precio FLOAT,
    FOREIGN KEY (Codigo_tienda_TIENDA_V) REFERENCES TIENDA(Codigo_tienda)
  	FOREIGN KEY (Codigo_bebida_BEBIDA_V) REFERENCES BEBIDA(Codigo_bebida)
);
